.create-answer {
  width: 500px;
  box-sizing: border-box;
  background-color: var(--white);
  border-radius: 10px;
  display: grid;
  grid-template-rows: 20px 100px repeat(2, 40px);
  gap: 16px;
  padding: 16px;
  font-family: var(--baseFont);
  font-size: 14px;
}

.create-answer__answer-content {
  &_error {
    border-color: var(--red);
  }
}

.create-answer__button {
  background-color: transparent;
  border: 1px solid var(--beige);
  border-radius: 5px;
  font-family: inherit;
  font-size: inherit;

  &:hover,
  &:focus {
    cursor: pointer;
    color: var(--white);
    background-color: var(--bittersweet);
  }
}
