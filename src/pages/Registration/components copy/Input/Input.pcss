.input-container {
  position: relative;
}

.input {
  border: none;
  border-bottom: 1px solid #cdc1b3;
  padding: 7px 0;
  font-size: 14px;

  &:focus-visible {
    outline: none;
  }

  &__error-message {
    position: absolute;
    right: 0;
    bottom: 0;
    font-size: 10px;
    color: var(--error-text-color);
    z-index: 2;
  }
}
