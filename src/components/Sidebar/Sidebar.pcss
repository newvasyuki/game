.sidebar {
  a {
    all: unset;
  }

  background-color: var(--springWood);
  width: var(--sidebar-width);
  font-family: var(--baseFont);
  font-style: normal;
  font-weight: 500;
  display: flex;
  flex-direction: column;
  flex-grow: 1;

  &__text_collapsed {
    display: none;
  }

  &__collapse-icon {
    display: flex;
    justify-content: flex-end;
    cursor: pointer;

    &_collapsed {
      transform: scale(-1,1);
    }
  }

  &_collapsed {
    background-color: var(--springWood);
    width: var(--sidebar-width-collapsed);
    font-family: var(--baseFont);
    font-style: normal;
    font-weight: 500;
    display: flex;
    flex-direction: column;
    flex-grow: 1;
  }

  &__menu {
    display: flex;
    flex-direction: column;
    list-style-type: none;
    flex-grow: 1;
    padding: 0;
    justify-content: center;
  }

  &__item-icon {
    margin: 0 2rem 0 1rem;
  }

  &__menu-item {
    position: relative;
    width: 17rem;
    height: 3rem;
    display: flex;
    flex-direction: row;
    align-items: center;
    &:hover {
      text-decoration: underline;
      cursor: pointer;
    }

    &_collapsed {
      position: relative;
      width: var(--sidebar-width-collapsed);
      height: 3rem;
      border-radius: 0 0.6rem 0.6rem 0;
      color: white;
      display: flex;
      flex-direction: row;
      align-items: center;
      &:hover {
        cursor: pointer;
      }
    }
  }
}
